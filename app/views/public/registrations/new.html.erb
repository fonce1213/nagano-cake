<div class="container">
  <div class="row">
    <div class="col-lg-10 px-5">

      <h4>新規会員登録</h4>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table">
          <tbody>
            <tr>
              <td>名前</td>
              <td>
                <div class="field">
                  <%= f.label :last_name, "(姓)" %>
                  <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
                </div>
              </td>
              <td>
                <div class="field">
                  <%= f.label :first_name, "(名)" %>
                  <%= f.text_field :first_name, placeholder: "道子" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>
                <div class="field">
                  <%= f.label :last_name_kana, "(セイ)" %>
                  <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
                </div>
              </td>
              <td>
                <div class="field">
                  <%= f.label :first_name_kana, "(メイ)" %>
                  <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td>
                <div class="field">
                  <%= f.email_field :email, placeholder: "sample@example.com" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>郵便番号(ハイフンなし)</td>
              <td>
                <div class="field">
                  <%= f.text_field :postal_code, placeholder: "0000000" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="2">
                <div class="field">
                  <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td>
                <div class="field">
                  <%= f.text_field :telephone_number, placeholder: "0000000000" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>パスワード(6文字以上)</td>
              <td>
                <div class="field">
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>
              </td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td>
                <div class="field">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
              </td>
            </tr>
          </tbody>
        </table>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>

      <h5>既に登録済みの方</h5>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>