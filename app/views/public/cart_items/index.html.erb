<div class="container">
  <div class="row justify-content-between">
    <div class="col-2 m-2 text-center bg-light">ショッピングカート</div>
    <div class="col-2 m-2">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: @cart_item, url: update_cart_item_path(id: cart_item.id), method: :patch do |f| %>
                <%= f.select :amount, options_for_select(*[1..10], {selected: cart_item.amount}) %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", destroy_cart_items_path(id: cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% @total += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
      <table class="table">
        <tr>
          <td>合計金額</td>
          <td><%= @total %></td>
        </tr>
      </table>
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      
      <%= link_to "情報入力に進む", new_orders_path, class: "btn btn-success" %>

    </div>
  </div>
</div>

