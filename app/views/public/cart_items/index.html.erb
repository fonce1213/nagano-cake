<div class="container">
  <div class="row justify-content-between">
    <div class="col-2 m-2 text-center bg-light">ショッピングカート</div>
    <div class="col-2 m-2">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
  <div class="row my-2">
    <table class="table table-bordered">
      <thead class="bg-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @total = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="align-middle"><%= image_tag cart_item.item.get_image(50,50) %>　<%= cart_item.item.name %></td>
            <td class="align-middle", style="width: 15%"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td class="align-middle", style="width: 15%">
              <%= form_with model: @cart_item, url: update_cart_item_path(id: cart_item.id), method: :patch do |f| %>
                <%= f.select :amount, options_for_select(*[1..10], {selected: cart_item.amount}) %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td class="align-middle", style="width: 15%"><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td class="text-center align-middle", style="width: 15%"><%= link_to "削除する", destroy_cart_items_path(id: cart_item.id), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% @total += cart_item.subtotal %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-3 align-self-end px-0">
      <table class="table table-bordered">
        <tr>
          <td class="bg-light", style="width: 25%">合計金額</td>
          <td style="width: 25%"><%= @total.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center font-weight-bold">
      <%= link_to "情報入力に進む", new_orders_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

