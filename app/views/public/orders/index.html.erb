<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light">注文履歴一覧</div>
  </div>
  <div class="row m-2">
    <div class="col-12">
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th style="width: 10%">注文日</th>
            <th style="width: 49%">配送先</th>
            <th style="width: 10%">注文商品</th>
            <th style="width: 9%">支払金額</th>
            <th style="width: 10%">ステータス</th>
            <th style="width: 12%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td class="align-middle">
              <%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            
            <td class="align-middle">
              
              <% order.order_items.each do |order_item| %>
              
                <%= order_item.item.name %></br>
              <% end %>
            </td>
            
            <td class="align-middle"><%= number_to_currency(order.total_price, unit: "円", format: "%n%u") %></td>
            <td class="align-middle"><%= order.order_status_i18n %></td>
            <td class="align-middle"><%= link_to "表示する", show_orders_path(order.id), class: "btn btn-primary font-weight-bold" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>