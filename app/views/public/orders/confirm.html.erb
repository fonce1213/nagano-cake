<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light">注文情報確認</div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <!--< %= form_with model: @order_item, url: create_orders_path, method: :post do |f| %>-->
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
             <!--< %= f.hidden_field :item_id, :value => cart_item.item.id %>-->
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <!--< %= f.hidden_field :price, :value => cart_item.item.with_tax_price %>-->
            <td><%= cart_item.amount %></td>
            <!--< %= f.hidden_field :amount, :value => cart_item.amount %>-->
            
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% @total += cart_item.subtotal %>
          <% end %>
          <!--< %= f.submit "注文を確定する", class: "btn btn-success" %>-->
           <!--< % end %>-->
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <div class="row">
        <div class="col">送料</div>
        <div class="col"><%= @postage %></div>
      </div>
      <div class="row">
        <div class="col">商品合計</div>
        <div class="col"><%= @total.to_s(:delimited) %></div>
      </div>
      <div class="row">
        <div class="col">請求金額</div>
        <div class="col"><%= (@postage + @total).to_s(:delimited) %></div>
      </div>
    </div>
  </div>
  <div class="row">
    <b>支払方法</b><%= @order.payment_i18n %>
  </div>
  <div class="row">
    <b>お届け先</b>
    <%= '〒' + @order.postal_code + ' ' + @order.address + ' ' + @order.name %>
  </div>
  
  <%= form_with model: @order, url: create_orders_path, method: :post do |f| %>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :postage, :value => @postage %>
    <%= f.hidden_field :total_price, :value => (@postage + @total) %>
    
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  <% end %>
 
</div>