<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light">注文情報確認</div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="py-0"><%= image_tag cart_item.item.get_image(50,50) %>　<%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% @total += cart_item.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <tr>
          <td class="bg-light">送料</td>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <td class="bg-light">商品合計</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="bg-light">請求金額</td>
          <td><%= (@postage + @total).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      <b>支払方法</b>
    </div>
    <div class="col">
      <%= @order.payment_i18n %>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
      <b>お届け先</b>
    </div>
    <div class="col">
      <%= '〒' + @order.postal_code + ' ' + @order.address + ' ' + @order.name %>
    </div>
  </div>
  <div class="row my-4">
    <div class="col text-center">
      <%= form_with model: @order, url: create_orders_path, method: :post do |f| %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :postage, :value => @postage %>
        <%= f.hidden_field :total_price, :value => (@postage + @total) %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>