<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light">注文情報入力</div>
  </div>
  <%= form_with model: @order, url: confirm_orders_path do |f| %>
  <div class="row m-2">
    <div class="payment">
      <label><b>支払方法</b></label>
        <div class="col mx-3">
          <%= f.radio_button :payment, Order.payments.key(0) %>
          <%= f.label :payment, Order.payments_i18n[:credit_card] %>
        </div>
        <div class="col mx-3">
          <%= f.radio_button :payment, Order.payments.key(1) %>
          <%= f.label :payment, Order.payments_i18n[:transfer] %>
        </div>
    </div>
  </div>
  <div class="row m-2">
    <div class="address">
      <label><b>お届け先</b></label>
        <div class="col mx-3">
          <%= f.radio_button :select_address, 0, :checked => true %>
          <%= f.label :select_address, "ご自身の住所" %>
        </div>
        <div class="col mx-5">
          <%= f.label :select_address, current_customer.address %>
        </div>
        <div class="col mx-3">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :select_address, "登録済住所から選択" %>
        </div>
        <div class="col mx-5">
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address_display) %>
        </div>
        <div class="col mx-3">
          <%= f.radio_button :select_address, 2 %>
          <%= f.label :select_address, "新しいお届け先" %>
        </div>
        <table class="table table-borderless mx-5">
          <tr>
            <td><label>郵便番号(ハイフンなし)</label></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><label>住所</label></td>
            <td><%= f.text_field :address, size: "50" %></td>
          </tr>
          <tr>
            <td><label>宛名</label></td>
            <td><%= f.text_field :name %></td>
          </tr>
        </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>