<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light">注文情報入力</div>
  </div>
  <%= form_with model: @order, url: confirm_orders_path do |f| %>
  <div class="row m-2">
    <div class="payment">
      <label>支払方法</label>
        <div class="col">
          <%= f.radio_button :payment, Order.payments.key(0) %>
          <%= f.label :payment, Order.payments_i18n[:credit_card] %>
        </div>
        <div class="col">
          <%= f.radio_button :payment, Order.payments.key(1) %>
          <%= f.label :payment, Order.payments_i18n[:transfer] %>
        </div>
    </div>
  </div>
  <div class="row m-2">
    <div class="address">
      <label>お届け先</label>
        <div class="col">
          <%= f.radio_button :select_address, 0, :checked => true %>
          <%= f.label :select_address, "ご自身の住所" %>
        </div>
        <div class="col">
          <%= f.label :select_address, current_customer.address %>
        </div>
        <div class="col">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :select_address, "登録済住所から選択" %>
        </div>
        <div class="col">
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
        </div>
        <div class="col">
          <%= f.radio_button :select_address, 2 %>
          <%= f.label :select_address, "新しいお届け先" %>
        </div>
        <div class="col">
          <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %>
        </div>
        <div class="col">
          <label>住所</label>
          <%= f.text_field :address %>
        </div>
        <div class="col">
          <label>宛名</label>
          <%= f.text_field :name %>
        </div>
          
        <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        
      </div>
    </div>
  </div>
  <% end %>
</div>