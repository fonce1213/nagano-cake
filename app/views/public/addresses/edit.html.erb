<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light"><b>配送先編集</b></div>
  </div>
  <div class="row mt-3">
    <div class="col-8">
      <%= form_with model: @address, url: edit_address_path, method: :patch do |f| %>
      <table class="table table-borderless mb-0">
        <tr>
          <td style="width: 30%">郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: "50" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
    </div>
    <div class="col align-self-end mb-2">
      <%= f.submit "変更内容を保存", class: "btn btn-success font-weight-bold" %>
    </div>
      <% end %>
    </div>
  </div>
</div>