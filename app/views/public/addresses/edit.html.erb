<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h5>配送先編集</h5>
      <%= form_with model: @address,url: edit_address_path(@address.id), method: :patch do |f| %>
      <table class="table">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: "50" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>