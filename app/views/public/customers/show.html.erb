<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h5>マイページ</h5>
      <h5><strong>登録情報</strong></h5>
      <div class="edit">
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
      </div>

      <table class="table">
        <tbody>
          <tr>
            <td>氏名</td>
            <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= current_customer.last_name_kana %>　<%=current_customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= current_customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= current_customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= current_customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= current_customer.email %></td>
          </tr>
        </tbody>
      </table>
      <h5><strong>配送先</strong></h5>
      <div class="">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-success" %>
      </div>
      <h5><strong>注文履歴</strong></h5>
      <div class="">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>



