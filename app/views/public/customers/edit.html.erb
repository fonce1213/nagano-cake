<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h5>会員情報編集</h5>


      <%= form_with model: @customer, url: customers_my_page_path, method: :patch do |f| %>
      <table class="table">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>