<div class="container">
  <div class="row m-2 w-75">
    <div class="col-2 text-center bg-light"><b>会員情報編集</b></div>
  </div>
  <%= form_with model: @customer, url: customers_my_page_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-8">
      <table class="table table-borderless">
        <tr>
          <td style="width: 30%">氏名</td>
          <td style="width: 30%"><%= f.text_field :last_name, autofocus: true %></td>
          <td style="width: 40%"><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan="2"><%= f.text_field :address, size: "70" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-4">
        <%= f.submit "編集内容を保存", class: "btn btn-success font-weight-bold w-50" %>
      </div>
      <div class="col-4">
        <%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger font-weight-bold" %>
      </div>
    </div>
  <% end %>
</div>