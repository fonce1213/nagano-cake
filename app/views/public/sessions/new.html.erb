<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h5>ログイン</h5>

      <h6>会員の方はこちらからログイン</h6>
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <table class="table">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, size: "50", placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, size: "50", autocomplete: "current-password" %></td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <h5>会員登録がお済みでない方</h5>

      <%= render "public/shared/links" %>

    </div>
  </div>
</div>