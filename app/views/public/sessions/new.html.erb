<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light"><h5>ログイン</h5></div>
  </div>
  <div class="row m-2 ml-5">
    <div class="col-3 text-center bg-light"><h6>会員の方はこちらからログイン</h6></div>
  </div>
  <div class="row">
    <div class="col-8">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, size: "50", placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, size: "50", autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row m-2">
    <div class="col-3 text-center bg-light">
      <h5>会員登録がお済みでない方</h5>
    </div>
  </div>
      <%= render "public/shared/links" %>

    </div>
  </div>
</div>