<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>管理者ログイン</h2>

      <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
        <div class="field">
          <p>メールアドレス</p>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="field">
          <p>パスワード</p>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>


        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
