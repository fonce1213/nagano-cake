<div class="container">
    <div class="row">
        <div>注文履歴一覧</div>
        <table>
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at %></td>
                    <td><%= order.customer_id %></td> <!-- 名前に -->
                    <td></td> <!-- 個数 -->
                    <td><%= order.order_status %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <!-- < %= paginate order %>-->
    </div>
</div>
