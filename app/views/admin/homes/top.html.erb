<div class="container">
  <div class="row m-2">
    <div class="col-2 m-2 text-center bg-light">注文履歴一覧</div>
  </div>
  <div class="row m-2 justify-content-center">
    <table class="table col-8">
      <thead class="bg-light">
        <tr>
          <th class="col-2">購入日時</th>
          <th class="col-2">購入者</th>
          <th class="col-2">注文個数</th>
          <th class="col-2">注文ステータス</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id) do %>
              <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
            <% end %>
          </td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <% @total_amount = 0 %>
          <% order.order_items.each do |order_item| %>
            <% @total_amount += order_item.amount %>
          <% end %>
          <td>
            <%= @total_amount %>
          </td>
          <td><%= order.order_status_i18n %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="row justify-content-center">
    <div class="col-2">
      <%= paginate @orders %>  
    </div>
  </div>
  
</div>
