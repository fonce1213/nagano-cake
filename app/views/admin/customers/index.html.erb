<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h4 class="mt-3">会員一覧</h4>

      <table>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class: "" %></td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
