<div class="container">
  <div class="row">
    <div class="col-3 m-2 text-center bg-light">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
    </div>
  </div>
    <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <div class="row m-2">
        <div class="col-2">会員ID</div>
        <div class="col-6"><%= @customer.id %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">氏名</div>
        <div class="col-3"><%= f.text_field :last_name %></div>
        <div class="col-3"><%= f.text_field :first_name %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">フリガナ</div>
        <div class="col-3"><%= f.text_field :last_name_kana %></div>
        <div class="col-3"><%= f.text_field :first_name_kana %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">郵便番号</div>
        <div class="col-6"><%= f.text_field :postal_code %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">住所</div>
        <div class="col-6"><%= f.text_field :address, size: "70" %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">電話番号</div>
        <div class="col-6"><%= f.text_field :telephone_number %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">メールアドレス</div>
        <div class="col-6"><%= f.text_field :email %></div>
      </div>
      <div class="row m-2">
        <div class="col-2">会員ステータス</div>
        <div class="col-6">
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効", {value: false} %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会", {value: true} %>
        </div>
      </div>
      <div class="row m-2">
        <div class="col-2"></div>
        <div class="col-2">
          <%= f.submit "変更を保存", class: "btn btn-success btn-block" %>  
        </div>
      </div>
    <% end %>
  </div>
</div>