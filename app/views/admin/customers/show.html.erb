<div class="container">
  <div class="row">
    <div class="col-3 text-center bg-light">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </div>
  </div>
  <div class="row m-2">
    <div class="col-2">会員ID</div>
    <div class="col-6"><%= @customer.id %></div>
  </div>
  <div class="row m-2">
    <div class="col-2">氏名</div>
    <div class="col-6">
      <%= @customer.last_name %>　<%= @customer.first_name %>
    </div>
  </div>    
  <div class="row m-2">
    <div class="col-2">フリガナ</div>
    <div class="col-6">
      <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
    </div>
  </div>    
  <div class="row m-2">
    <div class="col-2">郵便番号</div>
    <div class="col-6"><%= @customer.postal_code %></div>
  </div>    
  <div class="row m-2">
    <div class="col-2">住所</div>
    <div class="col-6"><%= @customer.address %></div>
  </div>
  <div class="row m-2">
    <div class="col-2">電話番号</div>
    <div class="col-6"><%= @customer.telephone_number %></div>
  </div>
  <div class="row m-2">
    <div class="col-2">メールアドレス</div>
    <div class="col-6"><%= @customer.email %></div>
  </div>
  <div class="row m-2">
    <div class="col-2">会員ステータス</div>
    <div class="col-6">
      <% if @customer.is_deleted == false %>
        <b class="text-success">有効</b>
      <% else %>
        <b class="text-muted">退会</b>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
    </div>
    <div class="col-3">
      <%= link_to "注文履歴一覧を見る", root_path, class: "btn btn-primary" %> <!-- 顧客ごとを作りたい -->
    </div>
  </div>
</div>
