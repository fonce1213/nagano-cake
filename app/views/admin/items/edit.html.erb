<div class="container">
  <div class="row">
    <div class="col-lg-5">
      <h4>商品編集</h4>

      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= pluralize(@item.errors.count, "error") %> prohibited this obj from being saved:
          </h3>
          <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @item, url: "/admin/items" do |f| %>
        <div class="form-group">
          <label>商品画像</label>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <label>商品名</label>
          <%= f.text_field :name, placeholder: "商品名" %>
        </div>
        <div class="form-group">
          <label>商品説明</label>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
        </div>
        <div class="form-group">
          <label>ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択してください --" %>
        </div>
        <div class="form-group">
          <label>税抜価格</label>
          <%= f.number_field :price, placeholder: "1000" %>円
        </div>
        <div class="form-group">
          <label>販売ステータス</label>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中", {value: true} %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中", {value: false} %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>