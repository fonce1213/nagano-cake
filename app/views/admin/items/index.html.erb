<div class="container">
  <div class="row m-2 justify-content-between">
    <div class="col-2 text-center bg-light">商品一覧</div>
    <div class="col-2 align-self-end">
      <%= link_to "+", new_admin_item_path, class: "btn btn-light rounded-circle p-0", style: "width:2rem;height:2rem" %>
    </div>
  </div>
    
  <div class="row mx-5 justify-content-center table-borderless">
    <table class="table col-10 border-top">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <u><%= link_to item.name, admin_item_path(item.id) %></u>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= Genre.find(item.genre_id).name %></td>
          <td>
            <% if item.is_active == true %>
                <b class="text-success">販売中</b>
            <% else %>
                <b class="text-muted">販売停止中</b>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= paginate @items %>
    </div>
  </div>
</div>