<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="mt-3">ジャンル編集</h4>
      <%= form_with model: @genre, url:admin_genre_path do |f| %>
        <div class="form-group">
          <label>ジャンル名</label>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
</div>