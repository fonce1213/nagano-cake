<div class="container">
  <div class="row m-2">
    <div class="col-2 text-center bg-light">ジャンル編集</div>
  </div>
  <%= form_with model: @genre, url:admin_genre_path do |f| %>
    <div class="row justify-content mt-5">
      <label class="col-2">ジャンル名</label>
      <div class="col-3">
        <%= f.text_field :name, placeholder: "ジャンル名" %>
      </div>
      <div class="col-2">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>