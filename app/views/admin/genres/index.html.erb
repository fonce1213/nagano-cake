<div class="container">
  <div class="row">
    <div class="col-6">
      <h5 class="col-lg-5 mt-3 bg-light text-center">ジャンル一覧・追加</h5>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td class="align-middle">
              <label class="col">ジャンル名</label>
            </td>
            <td class="align-middle"><%= f.text_field :name, placeholder: "ジャンル名" %></td>
            <td class="align-middle"><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>

      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
