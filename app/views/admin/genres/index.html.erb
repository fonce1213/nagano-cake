<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4 class="mt-3">ジャンル一覧・追加</h4>
      <%= form_with model: @genre do |f| %>
        <div class="form-group">
          <label>ジャンル名</label>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>

      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
